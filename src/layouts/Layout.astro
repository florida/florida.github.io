---
import "../styles/reset.css";
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
	postTitle?: string;
}

const { title, postTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap">

		<meta name="generator" content={Astro.generator} />
		
		<title>Florida Elago - {postTitle || title} </title>
	</head>
	<body>
		<Navigation title={title} />
		<slot />
		<Footer />
		<script src="https://unpkg.com/css-doodle@0.32.2/css-doodle.min.js"></script>
		<script is:inline async defer src="comments.js"></script>
		<script is:inline>
			const observer = new MutationObserver((mutations) => {
			  for (const mutation of mutations) {
				for (const node of mutation.addedNodes) {
				  if (node.tagName === 'IFRAME' && node.srcdoc) {
					const iframe = node;
		  
					iframe.onload = () => {
					  try {
						const doc = iframe.contentDocument || iframe.contentWindow.document;
						iframe.style.height = doc.body.scrollHeight + 'px';
					  } catch (err) {
						console.warn('Cannot access iframe content:', err);
					  }
					};
				  }
				}
			  }
			});
		  
			observer.observe(document.body, {
			  childList: true,
			  subtree: true,
			});
		  </script>
	</body>
</html>
