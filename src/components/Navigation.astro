---
const { title } = Astro.props;
const navTitle = title === "Home" ? "Florida Elago" : title;
---

<div class="header__container">
  <header>
    <div class="header__title-container">
      <a href="#">{navTitle}</a>
    </div>
    <nav>
      <a href="/">Home</a>
      <a href="/photos">Photos</a>
      <a href="/projects">Art</a>
      <a href="/coffee">Coffee</a>
      <a href="/projects">Projects</a>
      <a href="/posts">Writing</a>
      <a href="/about">About</a>
    </nav>
  </header>
</div>
<style>
  header,
  nav {
    display: flex;
  }

  .header__container {
    position: sticky;
    top: 0;
    border-bottom: 1px solid var(--nc-bg-3);
    border-top: 1px solid var(--nc-bg-3);
    z-index: 1;
  }

  .header__title-container {
    padding: 1rem;
    flex-basis: 250px;
  }

  .header__title-container a {
    font-weight: 600;
    font-size: 2rem;
    text-decoration: none;
    color: var(--nc-tx-black);
    white-space: nowrap; /* Prevents line break */
  flex-shrink: 0; /* Prevents shrinking */

  }

  header > nav > a {
    border-left: 1px solid var(--nc-bg-3);
    padding: 0 1rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: var(--nc-tx-black);
    width: 100%;
  }

  header > nav > a:active {
    box-shadow: inset 2px 2px var(--nc-bg-3);
  }

  header > nav > a:last-child {
    border-right: 0;
  }

  nav {
    width: 100%;
  }
</style>
